<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.web.dazu.mapper.TipBoardMapper">
	<select id="getBoardList" parameterType="map" resultType="Board">
		select *
		from notice
		<if test="searchWord != null and searchWord != ''">
			<if test="searchType == 'title'">
				where title like concat('%', #{searchWord}, '%')
			</if>
			<if test="searchType == 'content'">
				where content like concat('%', #{searchWord}, '%')
			</if>
		</if>
		order by no desc
	</select>
	
	<insert id="writeBoard" parameterType="Board">
		insert into tip_board 
		values (0,${board_write_datetime} , ${board_title} , ${board_contents},0,0,${member_usercode});
	</insert>
	
	<select id="getBoard" parameterType="int" resultType="Board">
		select *
		from tip_board
		where board_code = #{no}
	</select>
	
	<update id="updateViews" parameterType="int">
		update tip_board
		set board_visit = board_visit + 1
		where no = #{no};
	</update>
	
	<update id="modifyBoard" parameterType="Board">
		update tip_board
		set board_title = #{board_title}, board_contents = #{board_contents}, board_write_datetime = now()
		where board_code = #{no}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		delete from tip_board
		where board_code = #{no}
	</delete>
</mapper>